<div class='container px-5 px-sm-0'>
<%= render 'layouts/errors', obj: @book %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book, edit: @edit %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <p>
        <% @tag_list.each do |list| %>
          <%= link_to list.name,search_tag_path(tag_id: list.id) %>
          <%= "(#{list.books.count})" %>
        <% end %>
      </p>
      <p>
        <!-- link_to '新しい順', books_path(latest: "true"), remote:true -->
        <%= link_to '新しい順', books_path(latest: "true") %>
        |<!-- link_to '評価の高い順', books_path(rate_count: "true"), remote:true -->
        <%= link_to '評価の高い順', books_path(rate_count: "true") %>
      </p>
      <div id="sort_area">
        <%= render 'index', books: @books%>
      </div>
    </div>
  </div>
</div>